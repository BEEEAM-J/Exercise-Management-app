<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FourthActivity">

    <CalendarView
        android:id="@+id/calView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tvLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/custom_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvOTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:textColor="#1f1f1f"
                        android:text="목표 시간:" />
                    <TextView
                        android:id="@+id/tvExTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#1f1f1f"
                        android:textSize="17dp"
                        android:text="내 운동 시간:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="목표 완료/실패:"
                    android:textColor="#FF0000"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/custom_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvODistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#1f1f1f"
                        android:textSize="17dp"
                        android:text="목표 시간:" />
                    <TextView
                        android:id="@+id/tvExDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1f1f1f"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:text="내 운동 시간:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="목표 완료/실패:"
                    android:textColor="#FF0000"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tvResWalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/custom_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvOWalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1f1f1f"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:text="목표 시간:" />
                    <TextView
                        android:id="@+id/tvExWalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1f1f1f"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:text="내 운동 시간:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckWalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="목표 완료/실패:"
                    android:textColor="#FF0000"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1f1f1f"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:visibility="invisible"
            android:background="@drawable/custom_tv"
            android:text="" />

    </FrameLayout>



</LinearLayout>